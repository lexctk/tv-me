<% include ../partials/header %>

<div class="container">
    <h1>Edit <%= title.name %></h1>

    <form action="/movies/<%= title._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Title</label>
            <input name="title[name]" id="name" class="form-control" type="text" value="<%= title.name %>">
        </div>
        <div class="form-group">  
            <label for="image">Poster</label>
            <input name="title[image]" id="image" class="form-control" value="<%= title.image %>" type="text">
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <!-- TODO: javascript to update slug real time based on title -->
            <input name="title[slug]" id="slug" class="form-control" value="<%= title.slug %>" type="text" readonly>
        </div>
        <div class="form-group">  
            <label for="description">Description</label>
            <input name="title[description]" id="description" class="form-control" value="<%= title.description %>" type="text">
        </div>
        <div class="form-group">
            <label for="user[username]">Author</label>
            <input name="user[username]" id="user[username]" class="form-control" type="text" value="<%= title.author.username %>" readonly>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>    
    
</div>

<% include ../partials/footer %>