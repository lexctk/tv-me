<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <h1>Create new Entry</h1>

    <form action="/movies" method="POST">
        <div class="form-group">
            <label for="name">Enter new title name</label>
            <input name="title[name]" id="name" class="form-control" type="text" placeholder="Title">
        </div>
        <div class="form-group">  
            <label for="image">Enter poster URL</label>
            <input name="title[image]" id="image" class="form-control" type="text" placeholder="Image URL">
        </div>
        <div class="form-group">  
            <label for="description">Enter short description</label>
            <input name="title[description]" id="description" class="form-control" type="text" placeholder="Description">
        </div>
        <div class="form-group">  
            <label for="description">Year</label>
            <input name="title[year]" id="year" class="form-control" type="number" placeholder="Year" min="1950" step="1">
        </div>        
        <div class="form-group">
            <label for="user[username]">Author</label>
            <input name="user[username]" id="user[username]" class="form-control" type="text" value="<%= currentUser.username %>" readonly>
        </div>        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer %>