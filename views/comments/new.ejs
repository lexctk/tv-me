<% include ../partials/header %>

<div class="container">
    <h1>Add new Comment to <%= title.name %></h1>

    <form action="/movies/<%= title._id %>/comments" method="POST">
        <div class="form-group">  
            <label for="text">Comment</label>
            <textarea name="comment[text]" id="text" class="form-control" rows="10"></textarea>
        </div>        
        <div class="form-group">
            <label for="author">Enter your name</label>
            <input name="comment[author]" id="author" class="form-control" type="text" placeholder="Author">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer %>